<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái: đang xử lý"
        android:textColor="@color/textColor"
        android:textSize="17sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvOrderDetailItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/green_unique" />
    <TextView
        android:id="@+id/timeStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#5F5F5F"
        android:textSize="15sp"
        android:text="Ngày tạo đơn: 27/10/2003" />
    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green_unique"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:text="Tổng giá tiền: 110,000 đ" />
    <Button
        android:id="@+id/btnCancelOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button"
        android:layout_gravity="end"
        android:text="Hủy đơn hàng"/>

</LinearLayout>