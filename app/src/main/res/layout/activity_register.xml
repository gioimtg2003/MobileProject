<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity_Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="194dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="500dp"
                android:layout_height="170dp"
                android:background="#7fe368"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.223" />

            <ImageView
                android:id="@+id/background"
                android:layout_width="342dp"
                android:layout_height="178dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/background_preview_rev_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#BFBFBF"
            android:gravity="center"
            android:text="REGISTER"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:fontFamily="sans-serif"
            android:paddingTop="5dp"
            android:text="Email"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/custom_input"
            android:drawableRight="@drawable/icon_user"
            android:ems="10"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="10sp"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:fontFamily="sans-serif"
            android:paddingTop="5dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/custom_input"
            android:drawableRight="@drawable/icon_user"
            android:padding="10sp"
            android:hint="Enter the name"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:fontFamily="sans-serif"
            android:paddingTop="5dp"
            android:text="Phone"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/custom_input"
            android:drawableRight="@drawable/icon_user"
            android:padding="10sp"
            android:hint="Enter number phone"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:fontFamily="sans-serif"
            android:paddingTop="5dp"
            android:text="Password"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_password"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:padding="10sp"
                android:layout_marginStart="30dp"
                android:background="@drawable/custom_input"
                android:hint="Enter your password"
                android:inputType="text|textPassword" />

            <ImageView
                android:id="@+id/hide_unhide"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-90dp"
                android:layout_weight="1"
                android:src="@drawable/unhide_password" />
        </LinearLayout>

        <TextView
            android:id="@+id/error_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:padding="4dp"
            android:text="Password phải lớn hơn 6 ký tự"
            android:textColor="#EF4040"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-black"
            android:text="Register"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>